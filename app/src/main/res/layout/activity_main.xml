    <data>

        <variable
            name="viewModel"
            type="com.example.fooddelivery.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
